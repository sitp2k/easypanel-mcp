{
  "name": "easypanel-mcp",
  "version": "1.0.2",
  "description": "Multi-client MCP Server for EasyPanel - supports Claude, Cursor, Windsurf, Kiro, and Web IDEs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "easypanel-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "test": "node test-install.sh",
    "install:setup": "./install.sh",
    "install:local": "npm install && npm run build",
    "install:global": "npm install -g .",
    "postinstall": "echo '✅ MCP EasyPanel Server installed successfully! Run \"npm run test\" to verify.'",
    "example:env": "cp .env.example .env && echo '✅ .env file created from example. Please update with your credentials.'"
  },
  "keywords": [
    "mcp",
    "easypanel",
    "model-context-protocol",
    "claude",
    "cursor",
    "windsurf",
    "kiro",
    "ai-ide",
    "multi-client",
    "hosting",
    "deployment",
    "server-management",
    "docker",
    "containers",
    "devops",
    "api",
    "rest-api",
    "sse",
    "stdio",
    "cross-platform"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.0",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
